<body>
    
    <div class="calculator">
        <div class="display">
            <input type="text" id="result" value="" disabled>
        </div>
        <div class="buttons">
            <button class="btn func" onclick="clearDisplay()">C</button>
            <button class="btn func" onclick="deleteLast()">&#9003;</button>
            <button class="btn func" onclick="appendOperator('%')">%</button>
            <button class="btn operator" onclick="appendOperator('/')">/</button>

            <button class="btn num" onclick="appendNumber(7)">7</button>
            <button class="btn num" onclick="appendNumber(8)">8</button>
            <button class="btn num" onclick="appendNumber(9)">9</button>
            <button class="btn operator" onclick="appendOperator('*')">x</button>

            <button class="btn num" onclick="appendNumber(4)">4</button>
            <button class="btn num" onclick="appendNumber(5)">5</button>
            <button class="btn num" onclick="appendNumber(6)">6</button>
            <button class="btn operator" onclick="appendOperator('-')">-</button>

            <button class="btn num" onclick="appendNumber(1)">1</button>
            <button class="btn num" onclick="appendNumber(2)">2</button>
            <button class="btn num" onclick="appendNumber(3)">3</button>
            <button class="btn operator" onclick="appendOperator('+')">+</button>

            <button class="btn num zero" onclick="appendNumber(0)">0</button>
            <button class="btn num" onclick="appendNumber('.')">.</button>
            <button class="btn equal" onclick="calculate()">=</button>
        </div>
    </div>

    <script>
        const resultInput = document.getElementById('result');
        let currentExpression = '';

        // Добавить число или десятичную точку
        function appendNumber(number) {
            if (resultInput.value === 'Ошибка') {
                clearDisplay();
            }
            currentExpression += number;
            resultInput.value = currentExpression;
        }

        // Добавить оператор
        function appendOperator(operator) {
            if (resultInput.value === 'Ошибка') {
                clearDisplay();
            }
            // Запрет на добавление оператора, если выражение пусто
            if (currentExpression === '') return;

            const lastChar = currentExpression.slice(-1);

            // Если последний символ - оператор, заменить его
            if (['+', '-', '*', '/', '%'].includes(lastChar)) {
                currentExpression = currentExpression.slice(0, -1) + operator;
            } else {
                currentExpression += operator;
            }
            resultInput.value = currentExpression;
        }

        // Очистить весь дисплей
        function clearDisplay() {
            currentExpression = '';
            resultInput.value = '';
        }

        // Удалить последний символ
        function deleteLast() {
            currentExpression = currentExpression.slice(0, -1);
            resultInput.value = currentExpression;
        }

        // Выполнить вычисление
        function calculate() {
            if (currentExpression === '') return;

            try {
                // Замена '%' на '/100*' для корректного вычисления процентов
                let calculation = currentExpression.replace(/(\d+)%/g, '($1/100)');
                
                // Используем eval для простой арифметики. 
                let result = eval(calculation);

                // Ограничение числа знаков после запятой
                if (typeof result === 'number') {
                    result = parseFloat(result.toFixed(8));
                }

                resultInput.value = result;
                currentExpression = String(result);
            } catch (e) {
                resultInput.value = 'Ошибка';
                currentExpression = '';
            }
        }

        // Дополнительная функция для обработки ввода с клавиатуры
        document.addEventListener('keydown', (event) => {
            const key = event.key;
            
            if (/[0-9]/.test(key)) {
                appendNumber(key);
            } else if (['+', '-', '*', '/'].includes(key)) {
                appendOperator(key);
            } else if (key === 'Enter' || key === '=') {
                calculate();
                event.preventDefault(); // Предотвратить стандартное действие Enter
            } else if (key === 'Backspace') {
                deleteLast();
            } else if (key === 'Escape') {
                clearDisplay();
            } else if (key === '.') {
                appendNumber('.');
            }
        });
    </script>
</body>
</html>

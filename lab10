    <title>Красивый Neumorphism Калькулятор</title>
    
    <style>
        /* Общие настройки и фон */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: #e0e0e0; /* Светлый, мягкий фон */
        }

        /* Контейнер калькулятора (основной элемент Neumorphism) */
        .calculator {
            width: 340px;
            padding: 20px;
            border-radius: 30px;
            background: #e0e0e0;
            box-shadow: 
                10px 10px 30px rgba(174, 174, 192, 0.4), /* Темная тень (снизу-справа) */
                -10px -10px 30px #ffffff; /* Светлая тень (сверху-слева) */
        }

        /* Поле вывода (дисплей) */
        .display {
            margin-bottom: 25px;
        }

        #result {
            width: 100%;
            height: 60px;
            border: none;
            border-radius: 20px;
            padding: 20px;
            font-size: 2.2em;
            text-align: right;
            color: #333;
            background: #e0e0e0;
            box-sizing: border-box;
            /* Внутренний эффект "вдавленности" для дисплея */
            box-shadow: 
                inset 5px 5px 10px rgba(174, 174, 192, 0.6), 
                inset -5px -5px 10px #ffffff;
        }

        /* Сетка кнопок */
        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
        }

        /* Базовый стиль кнопок */
        .btn {
            padding: 20px 0;
            font-size: 1.2em;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            color: #333;
            background: #e0e0e0;
            /* Стиль "выпуклости" для кнопок */
            box-shadow: 
                6px 6px 12px rgba(174, 174, 192, 0.4), 
                -6px -6px 12px #ffffff;
            
            transition: all 0.15s ease; /* Для анимации нажатия */
        }

        /* Анимация нажатия (Вдавленный эффект) */
        .btn:active {
            box-shadow: 
